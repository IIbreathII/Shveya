{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@entities/*": [
        "src/entities/*.entity.ts",
        "src/entities/*.entity.js"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"], // Добавлено
    "types": ["node", "express", "multer"] // Добавлено
  },
  "incremental": true,
  "skipLibCheck": true,
  "include": ["src/**/*", "custom.d.ts"], // Добавлено custom.d.ts, если понадобится
  "exclude": ["node_modules", "dist"]
}
