{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2021", // Оставляем современный стандарт
    "lib": ["ES2021"], // Указываем библиотеки, с которыми работаем
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@entities/*": [
        "src/entities/*.entity.ts",
        "src/entities/*.entity.js"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "express", "multer"],
    "strict": true, // Включаем строгий режим для повышения качества кода
    "noImplicitAny": true, // Запрещаем неявный тип "any"
    "resolveJsonModule": true // Поддержка JSON-модулей
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false,
  "incremental": true,
  "skipLibCheck": true
}
